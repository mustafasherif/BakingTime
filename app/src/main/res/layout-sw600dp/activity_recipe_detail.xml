<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MistyRose"
    android:baselineAligned="false"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context="com.example.mustafa.bakingtime.RecipeDetail">

    <fragment
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:id="@+id/master_list_fragment"
        android:name="com.example.mustafa.bakingtime.MasterListFragment"
        tools:layout="@layout/master_list_layout">
    </fragment>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/Coral" />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/step_detail_fragment_tablet"
        android:name="com.example.mustafa.bakingtime.StepDetailFragment"
        tools:layout="@layout/step_detail_layout"></fragment>

</LinearLayout>